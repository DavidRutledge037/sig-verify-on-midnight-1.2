{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src",
    "types": [
      "node",
      "mocha",
      "chai"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
